<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record model="ir.ui.view" id="default_form_view_for_building">
        <field eval="True" name="active"/>
        <field name="arch" type="xml">
            <form>
                <sheet string="Building">
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="detail_grp">

                            <field name="code"/>
                            <field name="address"/>
                            <field name="City"/>
                            <field name="State"/>
                            <field name="Zip"/>
                        </group>
                        <group name="desc_grp">
                            <field name="Desc"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter" name="chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
        <field eval="False" name="field_parent"/>
        <field eval="[(6, 0, [])]" name="groups_id"/>
        <field eval="False" name="inherit_id"/>
        <field name="mode">primary</field>
        <field name="model">building</field>
        <field name="name">Default form view for building</field>
        <field name="priority">16</field>
        <field name="type">form</field>
    </record>
    <record model="ir.ui.view" id="default_tree_view_for_building">
        <field eval="True" name="active"/>
        <field name="arch" type="xml">
            <tree string="Building">
                <field name="name" modifiers="{}"/>
                <field name="address"/>
                <field name="City"/>
                <field name="State"/>
                <field name="Zip"/>
            </tree>
        </field>
        <field eval="False" name="field_parent"/>
        <field eval="[(6, 0, [])]" name="groups_id"/>
        <field eval="False" name="inherit_id"/>
        <field name="mode">primary</field>
        <field name="model">building</field>
        <field name="name">Default tree view for building</field>
        <field name="priority">16</field>
        <field name="type">tree</field>
    </record>
  <record model="ir.actions.act_window" id="building_wind_act">
    <field eval="True" name="auto_search"/>
    <field eval="False" name="binding_model_id"/>
    <field name="binding_type">action</field>
    <field name="context">{}</field>
    <field eval="False" name="domain"/>
    <field eval="False" name="filter"/>
    <field eval="[(6, 0, [])]" name="groups_id"/>
    <field name="help"><![CDATA[<p>
                        This is your new action ; by default, it contains a list view and a form view.
                    </p>
                    <p>
                        You can start customizing these screens by clicking on the Studio icon on the
                        top right corner (you can also customize this help message there).
                    </p>
                ]]></field>
    <field name="limit">80</field>
    <field eval="False" name="multi"/>
    <field name="name">Building</field>
    <field name="res_model">building</field>
    <field eval="False" name="search_view_id"/>
    <field eval="False" name="src_model"/>
    <field name="target">current</field>
    <field name="type">ir.actions.act_window</field>
    <field eval="False" name="usage"/>
    <field eval="False" name="view_id"/>
    <field name="view_mode">tree,form</field>
    <field name="view_type">form</field>
  </record>
</odoo>